                        {
                            <tr>
                                <td>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="pb_@i" name="Problems" value="@prob.Id" data-problem-price="@prob.EstimatedPrice" onclick="onCheckChange()">
