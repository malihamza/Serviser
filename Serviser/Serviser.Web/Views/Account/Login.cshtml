@model Serviser.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<meta name="google-signin-client_id" content="989656006569-obtc83g2qlrc2d3mhutp6rnsa53cql75.apps.googleusercontent.com">
<script src="https://apis.google.com/js/platform.js" async defer></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- Default form register -->
<div class="container">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { @class = "text-center border border-light p-5" }))
    {
        @Html.AntiForgeryToken()
        <p class="h4 mb-4">Log In</p>


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- E-mail -->
        @Html.EditorFor(model => model.EmailOrPhoneNumber, new { htmlAttributes = new { @class = "form-control", id = "defaultRegisterFormEmail", placeholder = "Email or Phone" } })
        @Html.ValidationMessageFor(model => model.EmailOrPhoneNumber, "", new { @class = "text-danger" })

        <!-- Password -->
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control mt-4", id = "defaultRegisterFormPassword", placeholder = "Password", @aria_describedby = "defaultRegisterFormPasswordHelpBlock" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })


        <div class="form-check text-left mt-4">
            @Html.EditorFor(model => model.RememberMe, new { htmlAttributes = new { @class = "form-check-input" , id="rememberMe"} })
            @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
            <label class="form-check-label" for="rememberMe">
                Remember Me
            </label>
        </div>

        <!-- Sign up button -->
        <button class="btn btn-info my-4 btn-block" type="submit">Log In</button>

    }

    @* Include the below bundle if validation doesn't work *@
    @*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@

</div>
