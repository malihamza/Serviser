<div class="container" style="width: 500px">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "text-center border border-light p-5", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <p class="h4 mb-4">Log In</p>

        @Html.TextBoxFor(m => m.Email, new { @type = "email", id = "defaultRegisterFormEmail", @class = "form-control mb-4", placeholder = "E-mail" })
        <!-- E-mail -->
        @Html.TextBoxFor(m => m.PasswordHash, new { @type = "password", id = "defaultRegisterFormEmail", @class = "form-control mb-4", placeholder = "Password" })

        <!-- Password -->
        <!-- Sign up button -->
        <button class="btn btn-info my-4 btn-block" type="submit">Log In</button>

        <!-- Social register -->
        <p>or sign up with:</p>
        <a href="#" class="fa fa-facebook a1" style="text-decoration-line: none; text-decoration-color: inherit;"></a>
        <a href="#" class="fa fa-twitter a1" style="text-decoration-line: none; text-decoration-color: inherit;"></a>
        <a href="#" class="fa fa-google a1" style="text-decoration-line: none; text-decoration-color: inherit;color: red"></a>
        <div id="my-signin2"></div>





        <hr>

        <!-- Terms of service -->
        <p>
            By clicking
            <em>Sign up</em> you agree to our
            <a href="" target="_blank">terms of service</a>
        </p>
    }
</div>


