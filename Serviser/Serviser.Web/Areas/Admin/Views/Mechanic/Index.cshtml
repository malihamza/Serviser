@model IEnumerable<Serviser.DAL.Entity.User>
@using Serviser.Web.Areas.Admin.Models;

@{
    ViewBag.Title = "Index";
}

@section stylesheets {
    <link href="~/Content/datatables.min.css" rel="stylesheet" />

}

@Html.Partial("_BreadCrumbPartial", new BreadCrumb()
{
    Trail = new List<BreadCrumb.Item> {
new BreadCrumb.Item { Name="Dashboard", Url = Url.Action("Index","Dashboard") },
new BreadCrumb.Item { Name="Mehanics", IsActive=true }
}
})

<table id="MechanicsTable" class="table table-bordered table-striped mt-5">
    <thead>

        <tr>
            <th>
                Name
            </th>
            <th>
                CNIC
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>Action </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MechanicProfile.CNIC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success" })
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script src="~/Scripts/datatables.min.js"></script>
    <script>
        $(() => {
            $('#MechanicsTable').DataTable();
        });
    </script>
}