@model Serviser.DAL.Entity.VehicleProblem
@using Serviser.Web.Areas.Admin.Models;
@{
    ViewBag.Title = "Create";
}

@Html.Partial("_BreadCrumbPartial", new BreadCrumb()
{
    Trail = new List<BreadCrumb.Item> {
new BreadCrumb.Item { Name="Dashboard", Url = Url.Action("Index","Dashboard") },
new BreadCrumb.Item { Name="Vehicle Problems", Url = Url.Action("Index","VehicleProblems") },
new BreadCrumb.Item { Name= "Add", IsActive=true }
}
})

<center>

    <div style="width: 50%; min-width:300px">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "Problem Name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">

                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "Problem Description" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.EditorFor(model => model.EstimatedPrice, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "Estimated Price" } })
                    @Html.ValidationMessageFor(model => model.EstimatedPrice, "", new { @class = "text-danger" })
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.VehicleTypeId, "Vehicle Type", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("VehicleTypeId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VehicleTypeId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-info" />
                    </div>
                </div>
            </div>
        }
    </div>

</center>
